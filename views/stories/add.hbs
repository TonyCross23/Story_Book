<h3>Add Story</h3>
<div class="row">
    <form action="/stories" method="POST" class="col s12">
        <div class="row">
            <div class="input-field form-group form-group">
                <label for="title">Title</label>
                <input type="text" id="title" class="form-control" name="title" class="form-control">
            </div>
        </div>

        <div class="row">
            <div class="input-field form-group">
                <label for="status">Status</label>
                <select id="status" class="form-control" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
            </div>
        </div>

           <div class="row">
            <div class="input-field form-group form-group">
                <label for="title">Image</label>
                <input type="file" id="image" class="form-control" name="image">
            </div>
        </div>

        <div class="row">
            <div class="input-field form-group">
                <p>Tell Us Your Story:</p>
                <textarea id="body" class="form-control" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>