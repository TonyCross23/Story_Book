<h3>Edit Story</h3>
 <div class="card">
    <div class="card-body">
        <div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
     <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field form-group form-group">
                <label for="title">Title</label>
                <input type="text" id="title" class="form-control" name="title" class="form-control" value="{{story.title}}">
            </div>
        </div>

        <div class="row">
            <div class="input-field form-group">
                <label for="status">Status</label>
                {{#select story.status }}
                <select id="status" class="form-control" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                {{/select}}
                </select>
            </div>
        </div>

           {{!-- <div class="row">
            <div class="input-field form-group form-group">
                <label for="title">Image</label>
                <input type="file" id="image" class="form-control" name="image">
            </div>
        </div> --}}

        <div class="row">
            <div class="input-field form-group">
                <p>Tell Us Your Story:</p>
                <textarea id="body" class="form-control" name="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row my-3">
            <input type="submit" value="Save" class="btn btn-dark my-2">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
    </div>
 </div>