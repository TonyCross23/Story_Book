<h4>Hello {{name}}</h4>

<table class="table table-striped shadow-sm">
{{#if stories}}
 <thead class="table-dark">
        <tr>
            <th class="text-center">Title</th>
            <th class="text-center">Date</th>
            <th class="text-center">Status</th>
            {{!-- <th class="text-center">Image</th> --}}
            <th class="text-center me-1"></th>
        </tr>
    </thead>
    <tbody>

      {{#each stories}}
    <tr>
        <td class="text-center"><a href="/stories/{{_id}}"><strong>{{title}}</strong></a></td>
        <td class="text-center">{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
        <td class="text-center"><span class="dash-status">{{status}}</span></td>
        {{!-- <td><img src="{{image}}" alt=""></td> --}}
        <td class=" d-flex justify-content-center">
            <a href="/stories/edit/{{_id}}" class="btn btn-sm btn-dark ms-2 px-3"><i class="fas fa-pen-to-square"></i></a>

            <form action="/stories/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-sm btn-danger ms-2">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
        </td>
    </tr>
   {{/each}}
       </tbody>
</table>
 
{{else}}
    <p>You have not created any stories</p>
{{/if}}


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>
